@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Todo.App.Model.ViewModels.TodoTaskVM

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Task</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="@Model.Task.Name"></label>
            <input asp-for="@Model.Task.Name" class="form-control" />
            <span asp-validation-for="@Model.Task.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="@Model.Task.CategoryId"></label>
            <select asp-for="@Model.Task.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="@Model.Task.CategoryId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="TodoTask" asp-action="Create" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}