@model IEnumerable<TodoTask>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="tab-content" id="v-pills-tabContent">
                <div class="mt-3">
                    <h2 class="text-start text-primary" >Todo List</h2>
                </div>
                <div class="w-100 text-end">
                    <div class="mb-3 mt-5">
                        <a asp-controller="TodoTask" asp-action="Create" class="btn btn-outline-secondary">Add Task</a>
                    </div>
                </div>
                <br/>
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach(var task in Model)
                    {
                        <tr>
                            <td width="50%">
                                @task.Name
                            </td>
                            <td width="20%">
                                @task.Category.Name
                            </td>
                            <td>
                                <form asp-controller="TodoTask" asp-action="Delete" method="post" class="inline">
                                    <input type="hidden" name="id" value="@task.Id"/>
                                    <div class="w-100 btn-group" role="group">
                                        <button type="submit" class="btn btn-success mx-1">
                                            <i class="bi bi-check-circle-fill"></i>
                                        </button>
                                        <button type="submit" class="btn btn-danger mx-1">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>